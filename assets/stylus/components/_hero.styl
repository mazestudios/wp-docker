html,
body,
.hero
  width 100%
  height 100%

body.admin-bar
  &,
  .hero
    height calc(100% - 35px)

.hero
  display flex
  align-items center
  justify-content center
  text-align center
  &__title
    font-size 4.625rem /* 74/16 */
    font-weight 900
    text-transform uppercase
  &__lead
    font-size 1.625rem /* 26/16 */
    font-weight 300
  &__version
    position fixed
    bottom 1.875rem /* 30/16 */
    left 50%
    transform translate3d(-50%, 0, 0)
    color rgba(blackColor, .5)
